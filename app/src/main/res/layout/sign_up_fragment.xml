<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    android:background="@color/cyan_blue"
    android:backgroundTint="@color/cyan_blue">

    <EditText
        android:id="@+id/edit_text_first_name"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="text"
        android:textColor="@color/pale_yellow"
        android:importantForAccessibility="no"
        android:text=""
        android:backgroundTint="@color/pale_yellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/first_name_title"
        app:layout_constraintTop_toBottomOf="@+id/start_with_your_details" />

    <EditText
        android:id="@+id/edit_text_last_name"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:backgroundTint="@color/pale_yellow"
        android:textColor="@color/pale_yellow"
        android:inputType="text"
        android:importantForAccessibility="no"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/last_name_title"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_first_name" />

    <EditText
        android:id="@+id/edit_text_birthday"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:importantForAccessibility="no"
        android:backgroundTint="@color/pale_yellow"
        android:textColor="@color/pale_yellow"
        android:inputType="text"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/birthday_title"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_last_name" />

    <EditText
        android:id="@+id/edit_text_email"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:backgroundTint="@color/pale_yellow"
        android:textColor="@color/pale_yellow"
        android:inputType="text"
        android:text=""
        android:importantForAccessibility="no"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/last_name_title"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_birthday" />

    <EditText
        android:id="@+id/edit_text_phone"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:backgroundTint="@color/pale_yellow"
        android:textColor="@color/pale_yellow"
        android:inputType="text"
        android:importantForAccessibility="no"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/last_name_title"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_email" />

    <EditText
        android:id="@+id/edit_text_username"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:backgroundTint="@color/pale_yellow"
        android:textColor="@color/pale_yellow"
        android:inputType="text"
        android:text=""
        android:importantForAccessibility="no"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/last_name_title"
        app:layout_constraintTop_toBottomOf="@+id/pick_user_and_password" />

    <EditText
        android:id="@+id/edit_text_password"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:backgroundTint="@color/pale_yellow"
        android:textColor="@color/pale_yellow"
        android:inputType="text"
        android:text=""
        android:importantForAccessibility="no"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/last_name_title"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_username" />

    <TextView
        android:id="@+id/welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:text="Welcome,"
        android:textColor="@color/pale_yellow"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/glad_to_see_you"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="We're glad to see you!"
        android:textColor="@color/pale_yellow"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/welcome"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/start_with_your_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_serif"
        android:text="Let's start with your details:"
        android:textColor="@color/pale_yellow"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@+id/glad_to_see_you"
        tools:layout_editor_absoluteX="123dp" />

    <TextView
        android:id="@+id/first_name_title"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto_serif"
        android:gravity="center"
        android:text="First name:"
        android:textColor="@color/pale_yellow"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/start_with_your_details" />

    <TextView
        android:id="@+id/last_name_title"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_serif"
        android:gravity="center"
        android:text="Last name:"
        android:textColor="@color/pale_yellow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_name_title" />

    <TextView
        android:id="@+id/birthday_title"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_serif"
        android:gravity="center"
        android:text="Birthday:"
        android:textColor="@color/pale_yellow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/last_name_title" />

    <TextView
        android:id="@+id/email_title"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_serif"
        android:gravity="center"
        android:text="Email:"
        android:textColor="@color/pale_yellow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/birthday_title" />

    <TextView
        android:id="@+id/phone_title"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_serif"
        android:gravity="center"
        android:text="*Phone Number:"
        android:textColor="@color/pale_yellow"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_title" />

    <TextView
        android:id="@+id/username_title"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto_serif"
        android:gravity="center"
        android:text="Username:"
        android:textColor="@color/pale_yellow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pick_user_and_password" />

    <TextView
        android:id="@+id/password_title"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_serif"
        android:gravity="center"
        android:text="Password:"
        android:textColor="@color/pale_yellow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username_title" />

    <TextView
        android:id="@+id/pick_user_and_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto_serif"
        android:text="Now, just pick a username and password!"
        android:textColor="@color/pale_yellow"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone_title" />

</androidx.constraintlayout.widget.ConstraintLayout>