<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".eventdetails.CreateEventFragment" >

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/width_gutter" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/width_gutter" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/right_guideline"
        app:layout_constraintStart_toStartOf="@+id/left_guideline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/add_photo_guideline"
                android:layout_width="match_parent"
                android:layout_height="194dp"
                android:background="@drawable/event_photo_border"
                android:layout_marginTop="30dp"
                app:layout_constraintBottom_toTopOf="@id/edit_event_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/create_event_photo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:id="@+id/edit_event_poster_icon"
                    android:clickable="true"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:alpha="0.6"
                    android:src="@drawable/add_photo"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>



            <EditText
                android:id="@+id/edit_event_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/light_text_border"
                android:fontFamily="@font/roboto_medium"
                android:hint="@string/hint_event_title"
                android:padding="10dp"
                android:textColorHint="@color/hint"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/add_photo_guideline" />

            <LinearLayout
                android:id="@+id/create_event_date_pickers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                app:layout_constraintBottom_toTopOf="@id/geolocation_toggle_label"
                app:layout_constraintTop_toBottomOf="@id/edit_event_title">

                <TextView
                    android:id="@+id/create_event_start_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Starts:"
                    android:textColor="@color/text_dark"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toStartOf="@+id/create_event_start_button"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edit_event_title" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/create_event_start_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="11dp"
                    android:background="@drawable/filled_light_text_border"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="8dp"
                    android:text="MM/DD/YYYY"
                    app:layout_constraintEnd_toStartOf="@+id/create_event_end_label"
                    app:layout_constraintStart_toEndOf="@+id/create_event_start_label"
                    app:layout_constraintTop_toBottomOf="@+id/edit_event_title" />

                <TextView
                    android:id="@+id/create_event_end_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Ends:"
                    android:textColor="@color/text_dark"
                    android:textSize="18dp"
                    app:layout_constraintEnd_toStartOf="@+id/create_event_end_button"
                    app:layout_constraintTop_toBottomOf="@+id/edit_event_title" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/create_event_end_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/filled_light_text_border"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="8dp"
                    android:text="MM/DD/YYYY"
                    app:layout_constraintTop_toBottomOf="@+id/edit_event_title"
                    tools:layout_editor_absoluteX="226dp" />

            </LinearLayout>


            <TextView
                android:id="@+id/geolocation_toggle_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Geolocation"
                android:textSize="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/geolocation_switch"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/create_event_date_pickers" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/geolocation_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/geolocation_toggle_label"
                app:layout_constraintTop_toBottomOf="@+id/create_event_date_pickers"
                app:showText="false"
                app:thumbTint="@color/cyan_blue"
                app:trackTint="#9B9999" />



        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>