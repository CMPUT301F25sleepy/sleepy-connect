<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/edit_poster_gl_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/width_gutter" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/edit_poster_gl_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/width_gutter" />

    <ImageView
        android:id="@+id/edit_poster_iv_poster"
        android:layout_width="0dp"
        android:layout_height="194dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/light_text_border"
        app:layout_constraintEnd_toStartOf="@+id/edit_poster_gl_right"
        app:layout_constraintStart_toStartOf="@+id/edit_poster_gl_left"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/edit_poster_tv_confirm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/button"
        android:fontFamily="@font/roboto_medium"
        android:padding="10dp"
        android:text="@string/label_save_changes"
        android:textAlignment="center"
        android:textColor="@color/text_light"
        app:layout_constraintTop_toBottomOf="@+id/edit_poster_iv_poster"
        app:layout_constraintEnd_toStartOf="@+id/edit_poster_gl_right"
        app:layout_constraintStart_toStartOf="@+id/edit_poster_gl_left" />

</androidx.constraintlayout.widget.ConstraintLayout>